<div class="row">
  <div class="col-md-6 col-md-offset-3">

<h1>StaticPages#index</h1>

<ul>
  <% if moussaillon_signed_in? %>
  <h3 class="text-center"><%= "Bienvenue #{current_moussaillon.username} ..."%></h3>
  <table class="table">
    <thead>
      <tr>
        <th>Les rumeurs qui circulent</th>
      </tr>
    </thead>
    <tbody>
      <% @gossips.each do |gossip| %>
        <tr>
          <td><%= gossip.content %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
  <% else %>
  <p class="text-center">Il semblerait que tu ne fasses pas encore parti des membres ou alors t'es pas connect√© !!</p>
  <%= link_to('Se connecter', new_moussaillon_session_path, :class => "btn btn-secondary btn-lg btn-block") %>
  <%= link_to('S\'inscrire', new_moussaillon_registration_path, :class => "btn btn-secondary btn-lg btn-block") %>
  <% end %>
